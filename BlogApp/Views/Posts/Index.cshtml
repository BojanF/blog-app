<!--model IEnumerable<BlogApp.Models.Post>-->
@model BlogApp.Special.PaginatedList<BlogApp.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div>
            @if (Model.Count() != 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                               Headline
                            </th>
                            <th>
                                Category
                            </th>                            
                            <th>
                                Approved
                            </th>
                            <th>
                                Posted at
                            </th>
                            <th>
                                Edited
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Headline)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                </td>                                
                                <td>                                                                   
                                    @if (item.Approved)
                                    {
                                        <span class="label label-success">YES</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">NO</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostedAt)
                                </td>
                                <td>
                                    @if (item.Edited)
                                    {
                                        <span class="label label-success">YES</span>

                                    }
                                    else{ 
                                        <span class="label label-danger">NO</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-success" asp-action="Edit" asp-route-id="@item.ID">
                                        <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                                    </a> 
                                    <a class="btn btn-xs btn-default" asp-action="Details" asp-route-id="@item.ID">
                                        <i class="fa fa-info" aria-hidden="true"></i> Details
                                    </a> 
                                    <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.ID">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
                                     </a>
                                </td>
                            </tr>                            
                         }
                         @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                         }
                    </tbody>
                </table>
                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a asp-action="Index"
                           asp-route-page="@(Model.PageIndex - 1)"
                           class="btn btn-default @prevDisabled">
                            &larr;
                            Previous
                        </a>
                    </li>
                    <li class="next">
                        <a asp-action="Index"
                           asp-route-page="@(Model.PageIndex + 1)"
                           class="btn btn-default @nextDisabled">
                            Next
                            &rarr;
                        </a>
                    </li>
                </ul>
            }
            else
            {
                <div class="row">
                    <div class="panel panel-info">
                        <div class="panel-heading text-center text-info">There is no record in database for any wirted post.</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
