@model BlogApp.ViewModels.PostDetailsWithCommentsViewModel
@{
    ViewData["Title"] = "Details";
}
<style>
    #commentArea {
        border: 2px groove #DEDEDE;
        border-radius: 8px;
        padding: 1%;
    }

</style>

<hr />
<blockquote>@Model.Post.Caption</blockquote>
<p>@Model.Post.PostedText</p>

<div class="row control-group">
    <div class="col-xs-10 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label class="control-label">Your Comment</label>
            <form asp-controller="Posts" asp-action="Details" method="post">
                <div class="col-xs-8 col-md-10 col-lg-10">
                    <textarea asp-for="@Model.Comment.CommentText" id="commentArea" rows="2" class="form-control" placeholder="Comment ..."></textarea>
                </div>
                <div class="col-xs-2 col-md-2 col-lg-2" style="margin-top:0.6em;">
                    <button type="submit" class="btn btn-default">Comment <span class="fa fa-send-o"></span></button>
                </div>
            </form>
           <!-- <span  class="text-danger"></span> -->
        </div>
    </div>
</div>
@{
    Html.RenderPartial("Commentss", Model.Post);
}
