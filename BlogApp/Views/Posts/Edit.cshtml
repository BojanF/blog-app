@model BlogApp.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <h2>Edit Post</h2>

            <form asp-action="Edit">
                <div class="form-horizontal">                    
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label asp-for="Headline" class="control-label"></label>
                            <input asp-for="Headline" placeholder="Headline" class="form-control" />
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label asp-for="Caption" class="control-label"></label>
                            <input asp-for="Caption" placeholder="Caption" class="form-control" />
                            <span asp-validation-for="Caption" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label asp-for="PostedText" class="control-label"></label>
                            <textarea rows="5" class="form-control" asp-for="PostedText" placeholder="Post"></textarea>
                            <span asp-validation-for="PostedText" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="hidden" asp-for="UserName" />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fa fa-fw fa-save"></i>
                                Save changes
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <br/>
            <div>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fa fa-fw fa-arrow-left" aria-hidden="true"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
